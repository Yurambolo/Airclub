
@{
    ViewBag.Title = "Edit";
}
@model Airclub.Models.Administrator
<h2>Співробітник № @Model.Id</h2>
@using (Html.BeginForm("Edit", "Administrator", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Login, "Логін");
            <br />
            @Html.EditorFor(m => m.Login)
        </p>
        <p>
            @Html.LabelFor(m => m.Password, "Пароль")
            <br />
            @Html.EditorFor(m => m.Password)

        </p>
        <p>
            @Html.LabelFor(m => m.Name, "ПІБ")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.AccessLevel, "Рівень доступу")
            <br />
            @Html.DropDownListFor(m => m.AccessLevel, ViewBag.Roles as SelectList)
        </p>
        <p><input type="submit" value="Зберегти" /></p>
    </fieldset>
}